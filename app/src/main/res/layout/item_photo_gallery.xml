<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/background"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:background="@drawable/clickable_bg"
	android:padding="@dimen/margin_tiny"
	tools:ignore="ContentDescription">

	<ProgressBar
		android:id="@+id/progress"
		android:layout_width="@dimen/progress_bar_small"
		android:layout_height="@dimen/progress_bar_small"
		android:layout_centerInParent="true"
		android:visibility="visible"/>

	<ImageView
		android:id="@+id/photo"
		android:layout_width="@dimen/item_photo_list_width"
		android:layout_height="@dimen/item_photo_list_height"
		android:scaleType="centerCrop"/>
</RelativeLayout>