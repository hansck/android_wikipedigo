<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/margin_bit"
                android:layout_marginLeft="@dimen/margin_bit"
                android:layout_marginRight="@dimen/margin_bit"
                android:layout_marginTop="@dimen/margin_bit">

	<ImageView
		android:id="@+id/img_photo"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scaleType="centerCrop"
		android:src="@mipmap/ic_launcher"/>

	<TextView
		android:id="@+id/tv_name"
		style="@style/NameAppearance"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="8dp"
		android:gravity="left"
		android:maxLines="1"
		android:shadowColor="@color/black"
		android:shadowDx="1.5"
		android:shadowDy="1.5"
		android:shadowRadius="1.5"
		android:text="Jessica Alibaba manuqweqkwueghqj weggqjwhegqjwhegqjhwegqjwhegqjwheg"
		android:textColor="@color/white"/>

</RelativeLayout>